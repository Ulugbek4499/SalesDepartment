@using SalesDepartment.Application.UseCases.Customers.Response;

@{
    Layout = "_Layout";
}

@model CustomerResponse

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col">
            <h3 class="text-center"> @Model.LastName @Model.FirstName @Model.MiddleName </h3>
            <div class="d-flex justify-content-between">
                <div>
                    <a href="@Url.Action("UpdateCustomer", new { id = Model.Id })" class="btn btn-secondary"><i class="fas fa-pen-to-square"></i> Изменить</a>
                    <a href="@Url.Action("DeleteCustomer", new { id = Model.Id })" class="btn btn-danger"><i class="fas fa-trash-can"></i> Удалить</a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="custom-cards">
                <h4 class="text-center">Информация о клиенте</h4>
                <table class="table table-bordered">
                    <tr>
                        <th>Имя</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th>Фамилия</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th>Отчество</th>
                        <td>@Model.MiddleName</td>
                    </tr>
                    <tr>
                        <th>Паспорт</th>
                        <td>@Model.Passport</td>
                    </tr>
                    <tr>
                        <th>Выдан</th>
                        <td>@Model.PassportIssuedBy</td>
                    </tr>
                    <tr>
                        <th>Адрес</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Телефон 1</th>
                        <td>@Model.PhoneNumberOne</td>
                    </tr>
                    <tr>
                        <th>Телефон 2</th>
                        <td>@Model.PhoneNumberTwo</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="custom-cards">
                <h4 class="text-center">Информация о контрактах</h4>
                <div class="table-container" style="overflow-y: scroll; height: 400px;">
                    <table id="Contracts" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Контракт №</th>
                                <th>Дата начала контракта</th>
                                <th>Общая сумма контракта</th>
                                <th>Ежемесячно оплата</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contract in Model.Contracts)
                            {
                                <tr>
                                    <td>@contract.ContractNumber</td>
                                    <td>@contract.ContractStartDate</td>
                                    <td>@contract.TotalAmountOfContract</td>
                                    <td>@contract.AmountOfMonthlyPayment</td>
                                    <td class="action-links">
                                        <div style="display: flex; gap: 5px;">
                                            <a href="@Url.Action("ViewContract", "Contract", new { id = contract.Id })" class="btn btn-outline-dark">Договор</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
