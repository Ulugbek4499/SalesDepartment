@using SalesDepartment.Application.UseCases.PaymentTypes.Commands.UpdatePaymentType;
@using SalesDepartment.Application.UseCases.PaymentTypes.Response;
@using SalesDepartment.Domain.Entities;
@model PaymentTypeResponse

@{
    ViewData["Title"] = "UpdatePaymentType";
    Layout = "_Layout";
}

<h3 class="text-center">Edit PaymentType</h3>
<hr />

<form asp-controller="PaymentType" asp-action="UpdatePaymentType" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="overflow-y:scroll; width:50%; height:70vh">
                <div class="custom-input">

                    <div class="form-group mt-3">
                        <label asp-for="Name">Name:</label>
                        <input asp-for="Name" class="form-control" required value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
