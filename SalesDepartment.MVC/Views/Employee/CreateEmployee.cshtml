@using Employee.Integration.Application.UseCases.Employees.Commands.CreateEmployee;
@using Employee.Integration.Domain.Entities;

@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "_Layout";
}

@model CreateEmployeeCommand

<h3 class="text-center">Add new Employee</h3>
<hr />
<form asp-controller="Employee" asp-action="CreateEmployee" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh" >

                <div class="form-group mt-3">
                    <label asp-for="Payroll_Number" class="form-label">Payroll_Number:</label>
                    <input asp-for="Payroll_Number" type="text" class="form-control" placeholder="Enter Payroll_Number">
                    <span asp-validation-for="Payroll_Number" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Forenames" class="form-label">Forenames:</label>
                    <input asp-for="Forenames" type="text" class="form-control" placeholder="Enter Forenames">
                    <span asp-validation-for="Forenames" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Surname" class="form-label">Surname:</label>
                    <input asp-for="Surname" type="text" class="form-control" placeholder="Enter Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="DateOfBirth">Employee DateOfBirth:</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" required />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>


                <div class="form-group mt-3">
                    <label asp-for="Telephone" class="form-label">Telephone:</label>
                    <input asp-for="Telephone" type="text" class="form-control" placeholder="Enter Telephone">
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Mobile" class="form-label">Mobile:</label>
                    <input asp-for="Mobile" type="text" class="form-control" placeholder="Enter Mobile">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Address" class="form-label">Address:</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Enter Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Address_2" class="form-label">Address_2:</label>
                    <input asp-for="Address_2" type="text" class="form-control" placeholder="Enter Address_2">
                    <span asp-validation-for="Address_2" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Postcode" class="form-label">Postcode:</label>
                    <input asp-for="Postcode" type="text" class="form-control" placeholder="Enter Postcode">
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="EMail_Home" class="form-label">EMail_Home:</label>
                    <input asp-for="EMail_Home" type="text" class="form-control" placeholder="Enter EMail_Home">
                    <span asp-validation-for="EMail_Home" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="StartDate">Employee StartDate:</label>
                    <input asp-for="StartDate" type="date" class="form-control" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
