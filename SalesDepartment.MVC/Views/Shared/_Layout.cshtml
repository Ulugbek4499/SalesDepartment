<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Employee.Integration.MVC</title>
    <style>
        /* Custom styles */
        .social-links {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .icon-link {
            color: white;
        }

        .sidebar .nav-link i {
            font-size: 2rem; /* Increase the font size to make the sidebar icons bigger */
        }

        .custom-sidebar {
            width: 200px;
        }

        .sidebar .nav-link {
            color: white;
        }

            .sidebar .nav-link:hover {
                color: yellow;
            }

        /* Navigation button styles */
        .navbar-nav .nav-item {
            margin-bottom: 5px;
        }

        .navbar-nav .nav-link {
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #0056b3;
            }

        /* Logout and user manager button styles */
        .navbar-nav .logout-form {
            display: inline-block;
            margin: 0;
        }

        .navbar-nav .logout-button {
            background-color: transparent;
            border: none;
            padding: 0;
            cursor: pointer;
        }

        .navbar-nav .user-manager-link {
            font-size: 14px;
            color: #fff;
            text-decoration: none;
            padding: 0 10px;
            line-height: 38px;
            transition: color 0.3s;
        }

            .navbar-nav .user-manager-link:hover {
                color: yellow;
            }
    </style>

</head>
<body>
    <div class="container-fluid" style="position: fixed">
        <div class="row">
            <aside class="bg-dark text-light col-2 sidebar" style="height: 100vh; width: 150px">
                <ul class="nav flex-column" style="padding-top: 15px">
                    <li class="nav-item mb-1">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-bars"></i>
                            </div>
                            <div class="name-wrapper">
                                Main Menu
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="HomeBuilding" asp-action="GetAllHomes" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-building"></i>
                            </div>
                            <div class="name-wrapper">
                                Apartments
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Customer" asp-action="GetAllCustomers" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-address-card"></i>
                            </div>
                            <div class="name-wrapper">
                                Customers
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Contract" asp-action="GetAllContracts" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-file-signature"></i>
                            </div>
                            <div class="name-wrapper">
                                Contracts
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Payment" asp-action="GetAllPayments" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-money-bill-wave"></i>
                            </div>
                            <div class="name-wrapper">
                                Payments
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Report" asp-action="GetStatistics" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-chart-line"></i>
                            </div>
                            <div class="name-wrapper">
                                Reports
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Report" asp-action="GetContractsWithDepts" asp-route-Time="@DateTime.Now" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-calendar"></i>
                            </div>
                            <div class="name-wrapper">
                                Contracts with Depts
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Founder" asp-action="GetAllFounders" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-user-group"></i>
                            </div>
                            <div class="name-wrapper">
                                Founders
                            </div>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="PaymentType" asp-action="GetAllPaymentTypes" class="nav-link">
                            <div class="icon-wrapper">
                                <i class="fa-solid fa-file-invoice-dollar"></i>
                            </div>
                            <div class="name-wrapper">
                                PaymentTypes
                            </div>
                        </a>
                    </li>
                </ul>
            </aside>

            <main class="col-10">
                <div class="container mt-2 pt-2">
                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>