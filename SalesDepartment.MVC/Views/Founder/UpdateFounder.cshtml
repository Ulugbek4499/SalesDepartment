@using SalesDepartment.Application.UseCases.Founders.Commands.UpdateFounder;
@using SalesDepartment.Application.UseCases.Founders.Response;
@using SalesDepartment.Domain.Entities;
@model FounderResponse

@{
    ViewData["Title"] = "UpdateFounder";
    Layout = "_Layout";
}

<h3 class="text-center">Изменить информацию об основателе</h3>
<hr />

<form asp-controller="Founder" asp-action="UpdateFounder" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="overflow-y:scroll; width:50%; height:70vh">
                <div class="custom-input">

                    <div class="form-group mt-3">
                        <label asp-for="FirstName">Имя:</label>
                        <input asp-for="FirstName" class="form-control" required value="@Model.FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="LastName" class="form-label">Фамилия:</label>
                        <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="MiddleName">Очество:</label>
                        <input asp-for="MiddleName" class="form-control" required value="@Model.MiddleName" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="PhoneNumber">Номер телефона:</label>
                        <input asp-for="PhoneNumber" class="form-control" required value="@Model.PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Сохранять</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
