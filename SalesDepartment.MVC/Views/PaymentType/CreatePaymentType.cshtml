@using SalesDepartment.Application.UseCases.PaymentTypes.Commands.CreatePaymentType;
@using SalesDepartment.Domain.Entities;

@{
    ViewData["Title"] = "CreatePaymentType";
    Layout = "_Layout";
}

@model CreatePaymentTypeCommand

<h3 class="text-center">Add new PaymentType</h3>
<hr />
<form asp-controller="PaymentType" asp-action="CreatePaymentType" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="Name" class="form-label">Name:</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Payment Type Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
