@using SalesDepartment.Application.UseCases.Founders.Commands.CreateFounder;
@using SalesDepartment.Domain.Entities;

@{
    ViewData["Title"] = "CreateFounder";
    Layout = "_Layout";
}

@model CreateFounderCommand

<h3 class="text-center">Добавить нового основателя</h3>
<hr />
<form asp-controller="Founder" asp-action="CreateFounder" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="FirstName" class="form-label">Имя:</label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Введите Имя">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="LastName" class="form-label">Фамилия:</label>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Введите Фамилия">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="MiddleName" class="form-label">Очество:</label>
                    <input asp-for="MiddleName" type="text" class="form-control" placeholder="Введите Очество">
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="PhoneNumber" class="form-label">Номер телефона:</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Введите Номер телефона">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Сохранять</button>
                </div>
            </div>
        </div>
    </div>
</form>
