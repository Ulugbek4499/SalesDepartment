@using SalesDepartment.Application.UseCases.Homes.Commands.UpdateHome;
@using SalesDepartment.Application.UseCases.Homes.Response;
@using SalesDepartment.Domain.Entities;
@model HomeResponse

@{
    ViewData["Title"] = "UpdateHome";
    Layout = "_Layout";
}

<h3 class="text-center">Edit Home</h3>
<hr />

<form asp-controller="HomeBuilding" asp-action="UpdateHome" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="overflow-y:scroll; width:50%; height:70vh">
                <div class="custom-input">

                    <div class="form-group mt-3">
                        <label asp-for="Block">Block:</label>
                        <input asp-for="Block" class="form-control" required value="@Model.Block" />
                        <span asp-validation-for="Block" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Entrance" class="form-label">Entrance</label>
                        <input asp-for="Entrance" type="text" class="form-control" value="@Model.Entrance">
                        <span asp-validation-for="Entrance" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Floor">Floor:</label>
                        <input asp-for="Floor" class="form-control" required value="@Model.Floor" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="ApartmentNumber">ApartmentNumber:</label>
                        <input asp-for="ApartmentNumber" class="form-control" required value="@Model.ApartmentNumber" />
                        <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="NumberOfRooms" class="form-label">NumberOfRooms</label>
                        <input asp-for="NumberOfRooms" type="text" class="form-control" value="@Model.NumberOfRooms">
                        <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Area">Area:</label>
                        <input asp-for="Area" class="form-control" required value="@Model.Area" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
