@using SalesDepartment.Application.UseCases.Contracts.Commands.CreateContract;
@using SalesDepartment.Domain.Entities;
@using SalesDepartment.Application.UseCases.Customers.Response;
@using SalesDepartment.Application.UseCases.Founders.Response;
@using SalesDepartment.Application.UseCases.Homes.Response;

@{
    ViewData["Title"] = "CreateContract";
    Layout = "_Layout";


    CustomerResponse[] Customers = ViewData["Customers"] as CustomerResponse[];
    HomeResponse[] Homes = ViewData["Homes"] as HomeResponse[];
    FounderResponse[] Founders = ViewData["Founders"] as FounderResponse[];
}

@model CreateContractCommand

<h3 class="text-center">Add new Contract</h3>
<hr />
<form asp-controller="Contract" asp-action="CreateContract" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="ContractNumber" class="form-label">ContractNumber:</label>
                    <input asp-for="ContractNumber" type="text" class="form-control" placeholder="Enter ContractNumber">
                    <span asp-validation-for="ContractNumber" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ContractStartDate">Contract ContractStartDate:</label>
                    <input asp-for="ContractStartDate" type="date" class="form-control" required />
                    <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="TotalAmountOfContract" class="form-label">TotalAmountOfContract:</label>
                    <input asp-for="TotalAmountOfContract" type="text" class="form-control" placeholder="Enter TotalAmountOfContract">
                    <span asp-validation-for="TotalAmountOfContract" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ContractEndDate">Contract ContractEndDate:</label>
                    <input asp-for="ContractEndDate" type="date" class="form-control" required />
                    <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NumberOfMonths" class="form-label">NumberOfMonths:</label>
                    <input asp-for="NumberOfMonths" type="text" class="form-control" placeholder="Enter NumberOfMonths">
                    <span asp-validation-for="NumberOfMonths" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="PaymentDay" class="form-label">PaymentDay:</label>
                    <input asp-for="PaymentDay" type="text" class="form-control" placeholder="Enter PaymentDay">
                    <span asp-validation-for="PaymentDay" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label for="HomeId">HomeId:</label>
                    <select class="form-control" id="HomeId" name="HomeId" required>
                        <option value="">Choose Home</option>
                        @foreach (var home in Homes)
                        {
                            <option value="@home.Id">@home.ApartmentNumber</option>
                        }
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label for="CustomerId">CustomerId:</label>
                    <select class="form-control" id="CustomerId" name="CustomerId" required>
                        <option value="">Choose Customer</option>
                        @foreach (var customer in Customers)
                        {
                            <option value="@customer.Id">@customer.FirstName</option>
                        }
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label for="FounderId">FounderId:</label>
                    <select class="form-control" id="FounderId" name="FounderId" required>
                        <option value="">Choose Founder</option>
                        @foreach (var founder in Founders)
                        {
                            <option value="@founder.Id">@founder.FirstName</option>
                        }
                    </select>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
